
NODE_ENV=development
APP_NAME=hr-monitor
APP_PORT=3000

# CORS / allowed origin (frontend TWA domain)
FRONTEND_URL=http://localhost:3001


POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=hr_monitor
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Prisma / DB connection string
DATABASE_URL=postgresql://postgres:postgres@db:5432/hr_monitor?schema=public



TELEGRAM_BOT_TOKEN=PUT_YOUR_BOT_TOKEN_HERE

# Management group chat id (negative bo'ladi)
MANAGEMENT_GROUP_ID=-100123456789

# (Ixtiyoriy) WebApp/TWA uchun bot username (agar kerak bo‘lsa)
# TELEGRAM_BOT_USERNAME=your_bot_username


###############################################################################
# HIKVISION (MS SQL)
###############################################################################
HIKVISION_HOST=192.168.1.100
HIKVISION_PORT=1433
HIKVISION_USER=sa
HIKVISION_PASSWORD=PUT_YOUR_MSSQL_PASSWORD_HERE

# (Ixtiyoriy) MS SQL database nomi (Hikvision DB nomi aniq bo'lsa)
# HIKVISION_DB=YourHikvisionDbName

# (Ixtiyoriy) Timeoutlar (mssql client sozlamalariga mos bo‘lishi mumkin)
# HIKVISION_CONN_TIMEOUT_MS=15000
# HIKVISION_REQUEST_TIMEOUT_MS=30000


###############################################################################
# SCHEDULE / CRON
###############################################################################
# Daily report cron time (server time zone bo'yicha)
# Agar backendda config qilinsa ishlatasiz
DAILY_REPORT_CRON=0 10 * * *

# Server timezone (agar app qo'llab-quvvatlasa)
TZ=Asia/Tashkent


###############################################################################
# LOGGING
###############################################################################
LOG_LEVEL=info
LOG_DIR=./logs
# (Ixtiyoriy) File log nomlari
LOG_ERROR_FILE=error.log
LOG_COMBINED_FILE=combined.log


###############################################################################
# SECURITY (TWA initData verify)
###############################################################################
# Next.js TWA initData tekshiruvda bot token ishlatiladi;
# Agar siz alohida secret ishlatsangiz shu yerga qo'ying.
# TWA_AUTH_SECRET=PUT_SECRET_HERE


###############################################################################
# OPTIONAL: FEATURE FLAGS / DEBUG
###############################################################################
# DEBUG=true
# ENABLE_TELEGRAM_NOTIFICATIONS=true